@model VitruviTest.ViewModels.ProviderGroupModel

<!DOCTYPE html>
<html>
<head>
	<title>VitruviTest</title>
	<style>
		table {
			font-family: arial, sans-serif;
			border-collapse: collapse;
			width: 100%;
		}

		td, th {
			border: 1px solid #dddddd;
			text-align: left;
			padding: 8px;
		}

		tr:nth-child(even) {
			background-color: #dddddd;
		}
	</style>
</head>
<body>
	<h2>Provider Groups</h2>
	<table>
		<tr>
			<th>Groups</th>
			<th>Providers</th>
		</tr>

		@for (int i = 0; i < Model.groupNames.Count; i++)
		{
			<tr>
				<td>
					@Model.groupNames[i].Name
				</td>
				<td>
					@Model.providerNames[i].Name
				</td>
			</tr>
		}

		@*@foreach (var item in Model.groupNames)
			{
